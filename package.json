{
  "name": "advent-of-code-2024",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "tsc -b",
    "test": "jest --onlyChanged",
    "test:ci": "ENABLE_SLOW_TESTS=1 jest",
    "test:watch": "ENABLE_SLOW_TESTS=1 jest --watch --onlyChanged",
    "last": "ts-node --files src/cli/run.ts last",
    "day": "ts-node src/cli/run.ts",
    "next": "ts-node src/cli/next.ts",
    "eslint": "eslint --fix --cache src",
    "eslint:check": "eslint --cache src",
    "check": "npm run build && npm run eslint:check",
    "lint": "npm run build && npm run eslint",
    "prepare": "husky install"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@jest/globals": "^29.3.1",
    "@types/copy-paste": "^1.1.33",
    "@types/figlet": "^1.5.5",
    "@types/jest": "^29.2.3",
    "@types/node": "^22.10.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0"
  },
  "dependencies": {
    "chalk": "^5.1.2",
    "copy-paste": "^1.5.3",
    "figlet": "^1.5.2"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
